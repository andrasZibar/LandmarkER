<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WelcomeActivity">

    <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_text"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.526"
            android:layout_marginTop="120dp" android:textColor="@android:color/black"/>

    <Button
            android:id="@+id/btn_chicago"
            android:layout_width="155sp"
            android:layout_height="wrap_content"
            android:onClick="showLandmarks"
            android:text="Start Exploring"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/holo_green_light"/>
    <TextView
            android:text="@string/powered_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sponsor_text" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/welcome_text" android:layout_marginTop="2dp"/>
</android.support.constraint.ConstraintLayout>